{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "airbnb-base"
  ],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "max-len": ["warn", 200],
    "no-continue": "off",
    "no-plusplus": "off",
    "no-restricted-syntax": "off"
  }
}
